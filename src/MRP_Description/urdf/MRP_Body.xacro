<?xml version="1.0"?>

<!-- start the robot tag here -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!--                MATERIALS:                 -->
    <material name = "black">
        <color rgba = "0.1 0.1 0.1 1"/>
    </material>

    <material name = "grey">
        <color rgba = "0.5 0.5 0.5 1"/>
    </material>

    <material name = "red">
        <color rgba = "1 0 0 1"/>
    </material>

    <!--                JOINTS:                 -->
    
    <!-- chassis to base link joint -->
    <joint name = 'B_C_joint' type = 'fixed'>
        <parent link = 'base_link'/>
        <child link = 'chassis_link'/>
        <origin xyz = "0 0 0.122"/>    
    </joint>

    <!-- rear left motor to chassis joint -->
    <joint name = 'C_RLM_joint' type = 'fixed'>
        <parent link = 'chassis_link'/>
        <child link = 'rear_left_motor'/>
        <origin xyz = '-0.1355 0.1015 -0.003'/>
    </joint>

    <!-- rear left wheel to rear left motor joint -->
    <joint name = 'RLM_RLW_joint' type = 'continuous'>
        <parent link = 'rear_left_motor'/>
        <child link = 'rear_left_wheel'/>
        <origin xyz = '0 0.0425 -0.0255'/>
        <axis xyz = '0 1 0'/>
    </joint>

    <!-- rear right wheel to rear right motor joint -->
    <joint name = 'RRM_RRW_joint' type = 'continuous'>
        <parent link = 'rear_right_motor'/>
        <child link = 'rear_right_wheel'/>
        <origin xyz = '0 -0.0425 -0.0255'/>
        <axis xyz = '0 1 0'/>
    </joint>

    <!-- rear right motor to chassis joint -->
    <joint name = 'C_RRM_joint' type = 'fixed'>
        <parent link = 'chassis_link'/>
        <child link = 'rear_right_motor'/>
        <origin xyz = '-0.1355 -0.1015 -0.003'/>
    </joint>

    <!-- chassis to pendulum bracket joint -->
    <joint name = 'C_to_PB_joint' type = 'revolute'>
        <parent link = 'chassis_link'/>
        <child link = 'pendulum_bracket_link'/>
        <origin xyz = '0.1755 0 -0.010562'/>
        <axis xyz = '1 0 0'/>
        <limit lower = '-0.261799' upper ='0.261799' effort = '10' velocity = '1'/>
    </joint>

    <!-- front left motor to pendulum bracket joint -->
    <joint name = 'PB_FLM_joint' type = 'fixed'>
        <parent link = 'pendulum_bracket_link'/>
        <child link = 'front_left_motor'/>
        <origin xyz = '0 0.1015 -0.029438'/>
    </joint>

    <!-- front left wheel to front left motor joint -->
    <joint name = 'FLM_FLW_joint' type = 'continuous'>
        <parent link = 'front_left_motor'/>
        <child link = 'front_left_wheel'/>
        <origin xyz = '0 0.0425 0.0115'/>
        <axis xyz = '0 1 0'/>
    </joint>

    <!-- front right motor to pendulum bracket joint -->
    <joint name = 'PB_FRM_joint' type = 'fixed'>
        <parent link = 'pendulum_bracket_link'/>
        <child link = 'front_right_motor'/>
        <origin xyz = '0 -0.1015 -0.029438'/>
    </joint>

    <!-- front right wheel to front right motor joint -->
    <joint name = 'FRM_FRW_joint' type = 'continuous'>
        <parent link = 'front_right_motor'/>
        <child link = 'front_right_wheel'/>
        <origin xyz = '0 -0.0425 0.0115'/>
        <axis xyz = '0 1 0'/>
    </joint>
    
    <!--                STRUCTURAL LINKS:                 -->

    <!-- base link -->
    <link name = "base_link"> 
    </link>

    <!-- chassis link -->
    <link name = 'chassis_link'>
        <visual>
            <origin xyz = "0 0 0" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/chassis.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'black'/>
        </visual>

        <collision>
            <origin xyz = "0 0 0" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/chassis.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>   
    </link>
    
    <!-- pendulum bracket link -->
    <link name = 'pendulum_bracket_link'>
        <visual>
            <origin xyz = "0 0 -0.039438" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/pendulum_bracket.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'black'/>
        </visual>

        <collision>
            <origin xyz = "0 0 -0.039438" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/pendulum_bracket.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>       
    </link>

    <!--                MOTORS:                 -->

    <!-- rear left motor link -->
    <link name = 'rear_left_motor'>
        <visual>
            <origin xyz = "0 0 -0.0185" rpy = "1.570796 0 3.141592"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'red'/>
        </visual>

        <collision>
            <origin xyz = "0 0 -0.0185" rpy = "1.570796 0 3.141592"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>
    
    <!-- rear right motor link -->
    <link name = 'rear_right_motor'>
        <visual>
            <origin xyz = "0 0 -0.0185" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'red'/>
        </visual>

        <collision>
            <origin xyz = "0 0 -0.0185" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!-- front left motor -->
    <link name = 'front_left_motor'>
        <visual>
            <origin xyz = "0 0 0.0185" rpy = "1.570796 0 3.141592"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'red'/>
        </visual>

        <collision>
            <origin xyz = "0 0 0.0185" rpy = "1.570796 0 3.141592"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!-- front right motor -->
    <link name = 'front_right_motor'>
        <visual>
            <origin xyz = "0 0 0.0185" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'red'/>
        </visual>

        <collision>
            <origin xyz = "0 0 0.0185" rpy = "1.570796 0 0"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/520_dc_gear_motor.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <!--                WHEELS:                 -->

    <!-- rear left wheel -->
    <link name = 'rear_left_wheel'>
        <visual>
            <origin xyz = "0 0.012 0" rpy = "1.570796 0 -1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'grey'/>
        </visual>

        <collision>
            <origin xyz = "0 0.012 0" rpy = "1.570796 0 -1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia ixx="0.028564013" ixy="-0.000252573" ixz="-0.000026632" 
            iyy="0.000671702" iyz="-0.002904292" izz="0.027909635"/>
        </inertial>
    </link>

    <!-- rear right wheel -->
    <link name = 'rear_right_wheel'>
        <visual>
            <origin xyz = "0 -0.012 0" rpy = "1.570796 0 1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'grey'/>
        </visual>

        <collision>
            <origin xyz = "0 -0.012 0" rpy = "1.570796 0 1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia ixx="0.028564013" ixy="-0.000252573" ixz="-0.000026632" 
            iyy="0.000671702" iyz="-0.002904292" izz="0.027909635"/>
        </inertial>
    </link>

    <!-- front left wheel -->
    <link name = 'front_left_wheel'>
        <visual>
            <origin xyz = "0 0.012 0" rpy = "1.570796 0 -1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'grey'/>
        </visual>

        <collision>
            <origin xyz = "0 0.012 0" rpy = "1.570796 0 -1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia ixx="0.028564013" ixy="-0.000252573" ixz="-0.000026632" 
            iyy="0.000671702" iyz="-0.002904292" izz="0.027909635"/>
        </inertial>
    </link>

    <!-- front left wheel -->
    <link name = 'front_right_wheel'>
        <visual>
            <origin xyz = "0 -0.012 0" rpy = "1.570796 0 1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
            <material name = 'grey'/>
        </visual>

        <collision>
            <origin xyz = "0 -0.012 0" rpy = "1.570796 0 1.570796"/>
            <geometry>
                <mesh filename = "file://$(find MRP_Description)/meshes/wheel_coupler_assembly.stl" scale = "0.001 0.001 0.001"/>
            </geometry>
        </collision>

        <inertial>
            <mass value = "0.15"/>
            <inertia ixx="0.028564013" ixy="-0.000252573" ixz="-0.000026632" 
            iyy="0.000671702" iyz="-0.002904292" izz="0.027909635"/>
        </inertial>
    </link>

</robot>